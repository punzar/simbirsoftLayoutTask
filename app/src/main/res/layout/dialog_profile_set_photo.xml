<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/choose_photo"
        android:src="@drawable/ic_upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogTvChoosePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/choose_photo"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dialog_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/dialogIvTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/take_a_photo"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/dialogTvTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_a_photo"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dialog_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/dialogIvTakePhoto"
        app:layout_constraintStart_toStartOf="@+id/dialogTvChoosePhoto"
        app:layout_constraintTop_toTopOf="@+id/dialogIvTakePhoto" />

    <ImageView
        android:id="@+id/dialogIvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialogIvTakePhoto"
        app:layout_constraintStart_toStartOf="@+id/dialogIvTakePhoto"
        app:layout_constraintTop_toBottomOf="@+id/dialogIvTakePhoto" />

    <TextView
        android:id="@+id/dialogTvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textColor="@color/black_87"
        android:textSize="@dimen/dialog_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/dialogIvDelete"
        app:layout_constraintStart_toStartOf="@+id/dialogTvTakePhoto"
        app:layout_constraintTop_toTopOf="@+id/dialogIvDelete" />

    <View
        android:layout_width="310dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>